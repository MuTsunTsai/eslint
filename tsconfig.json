{
	"compilerOptions": {
		"lib": [
			"ES2024"
		],
		"types": [
			"node"
		],
		"baseUrl": "./src",
		"target": "ESNext",
		"module": "ESNext",
		"noEmit": true,
		"strict": true,
		"noImplicitAny": false,
		"skipLibCheck": true,
		"isolatedModules": true,
		"resolveJsonModule": true,
		"moduleResolution": "bundler",
		"useDefineForClassFields": true,
		"allowImportingTsExtensions": true
	},
	"include": [
		"./*.ts",
		"./src/**/*.ts"
	]
}